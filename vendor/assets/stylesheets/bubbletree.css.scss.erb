.bubbletree {
	background: #fff;
	position: relative;
	height: 100%;
	overflow: hidden;

	.label {
		position: absolute;
		color: #fff;
		text-align: center;
		cursor: default;
	}

	.amount {
		font-family: Graublau, Georgia, sans-serif;
		font-size: 16px;
		display: none !important; //Forcing the amounts to be hidden
	}

	.desc {
		font-family: sans-serif;
		font-size: 14px;
		max-width: 80%;
		margin: 0 auto;
	}

	.label2 {
		position: absolute;
		color: #000;
		text-align: center;
		cursor: default;
		font-size: 11px;
		font-family: sans-serif;
		margin-top:5px;

		span {
			background: #fff;
		}
	}
}

.loading {
	z-index: 1000;
	position: absolute;
	width: 700px;
	height: 400px;
}

@font-face {
	font-family: Graublau;
	src: url('<%= asset_path "GraublauWeb.otf" %>') format("opentype");
}


html, body {
	background: #fff;
	margin: 0;
	height: 100%;
	width: 100%;
	padding: 0;
	overflow: hidden;
}

#header {
	font-family: Graublau;
	width: 200px;
	position: absolute;
	color: #333;
	bottom: 20px;
	right: 20px;
	z-index: 1000;
	text-align: left;

	.title {
		font-size: 32px;
	}
	.subtitle {
		font-size: 17px;
	}
}

#menu {
	font-family: Graublau;
	width: 150px;
	position: absolute;
	top: 20px;
	right: 20px;
	font-size: 20px;
	z-index: 1000;

	select {
		font-family: Graublau;
		font-size: 14px;
	}
}


.bubbletree-wrapper {
	width: 100%;
	height: 100%;
	position: absolute;

	.tooltip {
		max-width: 220px;
		border: 1px solid #999;
		position: absolute;
		background: #fff;
		z-index: 9999;
		box-shadow: 3px 3px 0px rgba(0,0,0,.2);
		border-radius: 2px;
		font-family: sans-serif;
		font-size: 13px;
		padding: 4px;

		.header {
			padding: 6px;

			.icon {
				width: 38px;
				height: 38px;
				float: left;
				background: #600;
				border-radius: 19px;
				margin-right: 8px;
			}
		}

		svg {
			width: 100px; height: 100px; fill: black; display: block; position: relative; visibility: visible;
			z-index: 10000;

			path {
				fill-opacity: 1;
				visiblity: visible;
			}
		}

		.row {
			clear: both;
			border-top: 1px solid #999; padding: 6px;
		}
	}
}


#tooltip {
	position: absolute;
	z-index: 3000;
	background-color: #fff;
	padding: 5px;

	border: 1px solid #999;
	box-shadow: 3px 3px 0px rgba(0,0,0,.2);
	border-radius: 2px;
	font-family: sans-serif;
	font-size: 13px;
	padding: 4px;
	max-width: 200px;

	.amount {
		font-weight: bold;
	}
}

#tooltip h3, #tooltip div { margin: 0; }

p#vtip #vtipArrow { position: absolute; top: -10px; left: 5px }
